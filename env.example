# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Security Configuration
PASSWORD_SALT=your-super-secure-random-salt-here
JWT_SECRET=your-super-secure-jwt-secret-here

# Admin Credentials (CHANGE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-super-secure-admin-password

# Hash List (JSON string with user credentials)
# Format: [{"hashId": "user123", "password": "plaintext_password", "name": "User Name", "department": "IT"}]
HASH_LIST=[{"hashId":"abc123","password":"test123","name":"Max Mustermann","department":"IT","status":"pending"},{"hashId":"def456","password":"test456","name":"Anna Schmidt","department":"Marketing","status":"in_progress"}]

# Environment
NODE_ENV=production

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret
SESSION_MAX_AGE=86400

# Database (for future use)
DATABASE_URL=your-database-url-here

# Logging
LOG_LEVEL=info 